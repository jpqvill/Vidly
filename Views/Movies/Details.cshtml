@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<li>
    Genre: @Model.Genre.Type
</li>
<li>
    Release Date: @Model.ReleaseDate.ToString("dddd, dd MMMM yyyy")
</li>
<li>
    Date Added: @Model.DateAdded.ToString("dddd, dd MMMM yyyy")
</li>
<li>
    Number in Stock: @Model.Stock
</li>

